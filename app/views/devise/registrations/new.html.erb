<% provide :page_title, 'Sign Up'%>
<% provide :author_sign_up, 'active' %>
<div class="row">
<div class="login text-center col-md-4 offset-md-4 col-sm-8 offset-sm-2">
<h1 class="brand">Ein<strong>stein<strong></h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :choose_your_avatar %><br />
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.text_field :name, class: "form-control", placeholder: "Your Name" %>
    </div>
    <div class="field">
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Your Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Your password (6 characters minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm your password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
