<% provide :page_title, 'Edit #{resource_name.to_s.humanize}'%>
<% provide :author, 'active' %>
<div class="row">
<div class="login text-center col-md-4 offset-md-4 col-sm-8 offset-sm-2">
<br>
<br>
  <h1>Edit your account</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :choose_your_avatar %><br />
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.text_field :name, class: "form-control", placeholder: "Your Name" %>
    </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Your password (6 characters minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm your password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-success" %>
    </div>
     <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>

     <%= link_to "Back", :back %>
  <% end %>
</div>
</div>
