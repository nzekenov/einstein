<% provide :page_title, @lesson.title%>
<% provide :author, 'active'%>
<div>
<%= link_to 'Edit', edit_authors_lesson_path(@lesson), class: 'btn btn-sm btn-warning' %>
<%= link_to 'Remove', authors_lesson_path(@lesson), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %>
</div>
<div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
      <h1><%= @lesson.title %></h1>
      <p><%= @lesson.display_day_published %></p>
      <%= @lesson.body.html_safe %>
    </div>
</div>
