<tr>
  <td><%= link_to lesson.title, authors_lesson_path(lesson) %></td>
  <td></td>
  <% if lesson.published? %>
  <td><%= link_to 'Unpublish', unpublish_authors_lesson_path(lesson), method: :put, class: 'btn btn-sm btn-primary' %></td>
  <% else %>
  <td><%= link_to 'Publish', publish_authors_lesson_path(lesson), method: :put, class: 'btn btn-sm btn-success' %></td>
  <% end %>
  <td><%= link_to 'Edit', edit_authors_lesson_path(lesson), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_lesson_path(lesson), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %></td>
</tr>
