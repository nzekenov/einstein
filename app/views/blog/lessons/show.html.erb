<% provide :page_title, @lesson.title%>
<% provide :lessons_active, 'active' %>
<div class="paraq">
<div class="container">
  <div class="row">
    <div class="lesson col-md-8 offset-md-2 text-left">
      <h1 class="sabaq"><%= @lesson.title %></h1>
      <p class="date"><%= @lesson.display_day_published%></p>
      <%= @lesson.body.html_safe %>
      <hr>

    </div>
    <div class="author-bio col-md-8 offset-md-2 text-center">
      <%= image_tag(@lesson.author.avatar.url, class: "author-avatar") %>
      <h4><%= @lesson.author.name %></h4>
      <p class="bio"><%= @lesson.author.bio %></p>
    </div>
      <hr>
      <div id="disqus_thread" class="col-md-8 offset-md-2"></div>
  </div>
</div>
</div>
